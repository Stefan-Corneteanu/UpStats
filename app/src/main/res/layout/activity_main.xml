<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/UpStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AppTitle"
        android:layout_marginTop = "20dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ForegroundTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="100dp"
        android:text="@string/ForegroundTimerTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ForegroundTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ForegroundTime"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/ForegroundTimeText"
        app:layout_constraintStart_toStartOf="@+id/ForegroundTimeText"
        app:layout_constraintTop_toBottomOf="@+id/ForegroundTimeText" />

    <TextView
        android:id="@+id/BackgroundTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="100dp"
        android:text="@string/BackgroundTimerTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/BackgroundTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BackgroundTime"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/BackgroundTimeText"
        app:layout_constraintStart_toStartOf="@+id/BackgroundTimeText"
        app:layout_constraintTop_toBottomOf="@+id/BackgroundTimeText" />


</androidx.constraintlayout.widget.ConstraintLayout>